{{#extend "layout"}}
{{#content "main"}}

<div class="container">
  {{> form-filter }}
</div>

<section class="gallery">
  <div class="container">
    <div class="gallery__inner">
      <ul class="gallery__list">
        {{!-- Данные из json --}}
        {{#each cards}}
          <li class="gallery__list-item {{#if this.big}}gallery__list-item--big{{/if}}">
            <a class="gallery-card" href="#" title="Перейти на страницу объекта">
              <div class="gallery-card__image-wrapper">
                <picture>
                  {{!-- Если есть webp --}}
                  {{#if this.webp}}
                    <source srcset="img/content/gallery/{{this.webp}}" type="image/webp">
                  {{/if}}
                  <img class="gallery-card__image" src="img/content/gallery/{{this.image}}" alt="{{this.name}}">
                </picture>
              </div>

              <span class="gallery-card__place">{{this.place}}</span>
              <h3 class="gallery-card__name">{{this.name}}</h3>
            </a>
          </li>
        {{/each}}
      </ul>
    </div>
  </div>
</section>

<div class="container">
  <form class="form-load-more" name="loadMore" method="GET">
    <button class="form-load-more__submit" type="submit">
      <svg class="form-load-more__submit-icon">
        <use xlink:href="#loading">
      </svg>
      <span class="form-load-more__submit-label">Показать еще</span>
    </button>
  </form>
</div>

{{/content}}
{{/extend}}