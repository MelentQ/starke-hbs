{{#extend "layout"}}
{{#content "main"}}

{{!-- Это место генерируется с помощью JS --}}
{{!-- Вся логика в файле contacts.js --}}
{{!-- Данные берутся из файла data/contacts.json --}}
<section class="contacts">
  <div class="container">
    <div class="swiper form-filter" id="js-init-form-filter-slider">
      <ul class="swiper-wrapper" id="js-filter-container">
        <template class="js-map-filter-element-template">
          <li class="swiper-slide form-filter__item">
            <button class="form-filter__link" type="button"></button>
          </li>
        </template>
      </ul>
    </div>

    <div class="contacts__inner">
      <div class="contacts__accordion">
        <template class="js-distributors-template">
          <div class="distributors js-accordion" data-close-other>
            <button class="distributors__header js-accordion-btn">
              <div class="distributors__header-inner">
                <div class="distributors__header-content">
                  <h3 class="distributors__city"></h3>
                  <span class="distributors__count"></span>
                  <svg class="distributors__header-icon">
                    <use xlink:href="#slash">
                  </svg>
                </div>
                <svg class="distributors__header-button-icon">
                  <use xlink:href="#accordion-arrow">
                </svg>
              </div>
            </button>
            <ul class="distributors__list js-accordion-content">
              <template class="js-distributors-item-template">
                <li class="distributors__item">
                  <div class="distributors__btn">
                    <h4 class="distributors__item-name"></h4>
                    <span class="distributors__item-address"></span>
                    <a class="distributors__item-tel" href="" title="Позвонить">
                      <svg class="distributors__item-tel-icon">
                        <use xlink:href="#phone-filled">
                      </svg>
                      <span class="distributors__item-tel-label"></span>
                    </a>
                    <span class="distributors__item-working-time"></span>
                  </div>
                </li>
              </template>
            </ul>
          </div>
        </template>
      </div>

      <div
        class="contacts__distributors-map"
        id="distributorsMap"

        data-initial-longitude="55.753215"
        data-initial-latitude="37.622504"
        data-initial-zoom="5"
      >
        {{!-- Яндекс карта --}}
        {{!-- Это место генерируется с помощью JS --}}
        {{!-- Вся логика в файле yandexMaps.js и contacts.js --}}
        {{!-- Данные берутся из файла data/contacts.json --}}
        {{!-- По умолчанию центр и зум карты берется из data-атрибутов --}}
      </div>
    </div>
  </div>
</section>

{{> form-question lightTheme=true text="Мы всегда открыты<br/>к сотрудничеству"}}

{{/content}}
{{/extend}}